{
  "name": "pr-modified-files",
  "version": "0.1.0",
  "private": true,
  "description": "TypeScript template action",
  "main": "lib/src/main.js",
  "scripts": {
    "build": "tsc",
    "types:check": "npm run build",
    "format": "prettier --write **/*.ts **/*.js **/*.json **/*.yml **/*.md",
    "format:check": "prettier --check **/*.ts **/*.js **/*.json **/*.yml **/*.md",
    "lint": "eslint '**/*.ts' '**/*.js' --max-warnings 0",
    "lint:github": "npm run lint -- --format=compact",
    "package": "npm run build && npm run package:ci",
    "package:ci": "ncc build --source-map --license licenses.txt",
    "test": "npm run build && jest",
    "test:ci": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "pr",
    "files"
  ],
  "author": "Sebastian Kreft",
  "license": "MIT",
  "engines": {
    "node": "12.22.1"
  },
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@actions/github": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^12.20.13",
    "@typescript-eslint/parser": "^4.31.1",
    "@vercel/ncc": "^0.28.6",
    "eslint": "^7.32.0",
    "eslint-plugin-github": "^4.1.5",
    "eslint-plugin-jest": "^24.4.0",
    "jest": "^26.6.3",
    "jest-circus": "^27.2.2",
    "js-yaml": "^4.1.0",
    "prettier": "2.3.2",
    "ts-jest": "^26.5.6",
    "typescript": "^4.3.4"
  }
}
